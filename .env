# ==================== INFRASTRUCTURE ====================
# Backend API URL
BACKEND_URL=http://localhost:8000/api

# RabbitMQ Connection
RABBITMQ_URL=amqp://guest:guest@localhost/

# Redis Connection
REDIS_URL=redis://localhost

# PostgreSQL Connection (async driver)
DATABASE_URL=postgresql+asyncpg://postgres:12345@localhost:5432/DataAIAgent

# ==================== SHARDING & QUEUES ====================
# Number of queue shards for horizontal scaling
SHARD_COUNT=8

# Queue prefix for AI jobs
AI_QUEUE_PREFIX=ai_jobs_

# Dead Letter Exchange name
DLX=ai_dlx

# ==================== PERFORMANCE TUNING ====================
# Max concurrent LLM calls (prevents rate limiting)
LLM_CONCURRENCY=5

# RabbitMQ prefetch count per consumer
PREFETCH_COUNT=10

# PostgreSQL connection pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ==================== RETRY & TIMEOUT ====================
# Maximum retry attempts before sending to DLQ
MAX_RETRIES=5

# Distributed lock TTL in milliseconds
LOCK_TTL_MS=30000

# Job execution timeout in seconds
JOB_TIMEOUT_SEC=300

# ==================== LLM CONFIGURATION ====================
# Use dummy LLM for testing (no API calls)
USE_DUMMY=false

# Google Gemini API Key
GOOGLE_API_KEY=your_google_api_key_here

# Model selection
# Options: gemini-2.0-flash-exp, gemini-2.5-flash, gemini-1.5-pro
LLM_MODEL=gemini-2.5-flash

# Temperature (0.0 - 1.0)
LLM_TEMPERATURE=0.3

# Max tokens per response
LLM_MAX_TOKENS=2048

# ==================== MEMORY & HISTORY ====================
# Max conversation history messages to load
MAX_HISTORY_MESSAGES=20

# Checkpoint TTL in seconds (for Redis)
CHECKPOINT_TTL_SEC=3600


# ==================== LANGCHAIN & MONITORING ====================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=""
LANGCHAIN_PROJECT=""
# DÃ¹ng cho checkpointer (PSYCOPG DSN)
CHECKPOINTER_DB_DSN="user=postgres password=12345 host=localhost port=5432 dbname=DataAIAgent"
# Sentry (for error tracking)
SENTRY_DSN=https://your_sentry_dsn_here

# Prometheus metrics port
METRICS_PORT=9090

# SYSTEM Prompt

#API check token URL
SPRING_CHECK_TOKEN_URL=http://localhost:8080/agent/check_token